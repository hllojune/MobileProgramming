<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/select_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        android:text="날짜 선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="시간 선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date_button" />

    <EditText
        android:id="@+id/selected_date_text"
        android:layout_width="218dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="68dp"
        android:text="선택된 날짜: "
        app:layout_constraintStart_toEndOf="@+id/select_date_button"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/selected_time_text"
        android:layout_width="217dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="선택된 시간:"
        app:layout_constraintStart_toEndOf="@+id/select_time_button"
        app:layout_constraintTop_toBottomOf="@+id/selected_date_text" />
</androidx.constraintlayout.widget.ConstraintLayout>